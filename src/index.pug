    head

        meta(charset="utf-8")
        meta(name="viewport", content="width=device-width, initial-scale=1, shrink-to-fit=no")
        meta(name="description", content="")
        meta(name="author", content="Nocebo Games")

        title Uncursed

        meta(property="og:url" content="https://uncursed.io/")
        meta(property="og:image" content="https://uncursed.io/share.png")
        meta(property="og:title" content="Uncursed")
        meta(property="og:description" content="Uncursed is coming.")
